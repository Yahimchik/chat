<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <!-- Add soft delete columns to addresses -->
    <changeSet id="2025-11-05-01-add-softdelete-addresses" author="Egor">
        <addColumn tableName="addresses">
            <column name="is_deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="TIMESTAMP"/>
        </addColumn>
    </changeSet>

    <!-- Add soft delete columns to apartments -->
    <changeSet id="2025-11-05-02-add-softdelete-apartments" author="Egor">
        <addColumn tableName="apartments">
            <column name="is_deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="deleted_at" type="TIMESTAMP"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
