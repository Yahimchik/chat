<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="2025-10-11-create-settings-table" author="Egor">
        <createTable tableName="user_settings">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="language" type="VARCHAR(20)" defaultValue="RU"/>
            <column name="push_enabled" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="email_notifications" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="theme" type="VARCHAR(20)" defaultValue="LIGHT"/>
            <column name="payment_method" type="VARCHAR(20)" defaultValue="CASH"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
