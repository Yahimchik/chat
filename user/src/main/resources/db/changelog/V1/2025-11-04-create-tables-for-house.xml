<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <!-- Address table -->
    <changeSet id="2025-11-04-01-create-addresses" author="Egor">
        <createTable tableName="addresses">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v7()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(100)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="street" type="VARCHAR(200)"/>
            <column name="building_number" type="VARCHAR(20)"/>
            <column name="entrance" type="VARCHAR(10)"/>
            <column name="floor" type="VARCHAR(10)"/>
            <column name="apartment_number" type="VARCHAR(10)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Apartment table -->
    <changeSet id="2025-11-04-02-create-apartments" author="Egor">
        <createTable tableName="apartments">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v7()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- UserApartment table -->
    <changeSet id="2025-11-04-03-create-user-apartments" author="Egor">
        <createTable tableName="user_apartments">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v7()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="apartment_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="joined_at" type="TIMESTAMP"/>
            <column name="is_active" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <!-- UserStatus table -->
    <changeSet id="2025-11-04-04-create-user-status" author="Egor">
        <createTable tableName="user_status">
            <column name="user_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_online" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="last_seen_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
